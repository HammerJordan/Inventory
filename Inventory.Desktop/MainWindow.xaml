<Window x:Class="InventoryManagement.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:InventoryManagement.Desktop.Controls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:local="clr-namespace:InventoryManagement.Desktop"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:view="clr-namespace:InventoryManagement.Desktop.View"
        xmlns:vm="clr-namespace:InventoryManagement.Desktop.ViewModel"
        Title="MainWindow"
        MinHeight="600"
        MinWidth="800"
        Width="1200"
        Height="750"
        AllowsTransparency="true"
        Background="{StaticResource MainViewBackground}"
        WindowStyle="None"
        mc:Ignorable="d">
    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="35" ResizeBorderThickness="5" />
    </WindowChrome.WindowChrome>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  TopBar  -->
        <Grid Height="35"
              VerticalAlignment="Top"
              Background="{StaticResource TopBarColor}"
              ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <!--<Setter Property="WindowChrome.IsHitTestVisibleInChrome"
                    Value="True" />-->

            <!--<Menu VerticalAlignment="Center"
                  Background="Transparent"
                  IsMainMenu="True">

                <MenuItem FontSize="17"
                          Foreground="White"
                          Header="_File"
                          WindowChrome.IsHitTestVisibleInChrome="True">
                    <MenuItem Foreground="Black" Header="_Open" />
                </MenuItem>

            </Menu>-->

            <StackPanel Grid.Column="1"
                        Margin="1"
                        Orientation="Horizontal">
                <Button Command="{Binding MinimizeCommand}"
                        Content="&#x2014;"
                        Style="{StaticResource TitleBarButtons}" />
                <Button Command="{Binding ToggleFullScreenCommand}"
                        Content="&#x1f5d7;"
                        Style="{StaticResource TitleBarButtons}" />
                <Button Command="{Binding CloseWindowCommand}"
                        Content="X"
                        Style="{StaticResource TitleBarButtons}" />
            </StackPanel>

        </Grid>
        <!--  SideBar  -->
        <StackPanel x:Name="SideBarNav"
                    Grid.Row="1"
                    Grid.Column="0"
                    Width="150"
                    Background="{StaticResource SideBarBackground}"
                    Orientation="Vertical">

            <controls:SideBarItem Padding="0,5,0,10"
                                  SideBarIcon="&#xf543;"
                                  SideBarName="Record"
                                  SideBarSelected="True" />
            <controls:SideBarItem Padding="0,0,0,10"
                                  SideBarName="Catalog"
                                  SideBarSelected="False" />
            <controls:SideBarItem Padding="0,0,0,10"
                                  SideBarName="Settings"
                                  SideBarSelected="False" />

        </StackPanel>

        <ContentControl x:Name="ActiveContent"
                        Grid.Row="1"
                        Grid.Column="1" />



    </Grid>

</Window>
