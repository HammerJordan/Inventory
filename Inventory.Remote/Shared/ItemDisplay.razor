@using Inventory.Domain
@using Inventory.Domain.Models
@inherits LayoutComponentBase

<div class="product-item-container">

    <div class="horizontal-group">
        <img class="product-display" src="@Product.ImageHref" alt="product image" />
        <div class="product-info-group">
            <div class="product-name">@Product.Name</div>
            <div class="product-upc">UPC: @Product.UPC</div>
            <p class="product-desc">@Product.Description</p>
            <div class="product-cost">$ @Product.Cost</div>
        </div>
    </div>


    <button class="add-button" @onclick="@OnAddClick">Add</button>
</div>

@code
{
    [Parameter] public ProductModel Product { get; set; }
    [Parameter] public Action<ProductModel> OnAdd { get; set; }

    private void OnAddClick()
    {
        OnAdd?.Invoke(Product);
    }
}
